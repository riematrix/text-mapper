{
    "name": "Text Mapper",
    "version": "0.0.0.1",
    "manifest_version": 2,
    "minimum_chrome_version": "26",
    "description": "A minimal extension text mapper tool for Chrome.",

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "permissions": [
        "contextMenus",
        "tabs",
        "http://*/*",
        "https://*/*"
    ],
    "browser_action": {
        "default_icon": "images/icon.png",
        "default_title": "Crawler",
        "default_popup": "popup.html"
    },
    "content_scripts":[{
        "matches":["<all_urls>"],
        "css": [ "css/crawler.css" ],
        "js":[
            "lib/utils.js",
            "lib/xpath.js",
            "lib/filesystem.js",
            "js/datalist.js",
            "js/textitem.js",
            "js/editor.js",
            "js/locator.js",
            "js/crawler.js"
        ],
        "all_frames":true
    }],
    "web_accessible_resources":[
        "css/*",
        "js/*",
        "lib/*",
        "images/*"
    ]
}
